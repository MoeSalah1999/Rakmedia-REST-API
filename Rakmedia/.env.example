# ==============================
# DJANGO CORE SETTINGS
# ==============================

DJANGO_SECRET_KEY=your-production-secret-key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ==============================
# DATABASE CONFIGURATION
# ==============================
# Example for PostgreSQL (Heroku, Render, etc.)
# Format: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgres://username:password@localhost:5432/rakmedia_db

# ==============================
# EMAIL SETTINGS
# ==============================
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# ==============================
# SECURITY SETTINGS
# ==============================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ==============================
# CORS / FRONTEND SETTINGS
# ==============================
# Comma-separated list of allowed origins (for React frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourfrontenddomain.com

# ==============================
# LOGGING / MONITORING
# ==============================
LOG_LEVEL=INFO

# ==============================
# OPTIONAL (FOR FUTURE USE)
# ==============================
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
